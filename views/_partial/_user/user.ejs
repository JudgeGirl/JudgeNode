<div class="header">
	<h1 class='article-title'><%= __('User') %></h1>
	<h2><%- userinfo.info.lgn  %></h2>
</div>
<div class="content">

<div class="pure-g">
	<div class="pure-u-1 pure-u-lg-8-24">
		<div class="pure-u-1-1">
			<img class="pure-u-1-1" src="<%= site.url_for('images/avatar/thumb--' + userinfo.info.uid) %>" onerror="this.src='http://i.imgur.com/mV053DI.png'"/>
		</div>
		<div class="pure-u-1-1">
			<div class="header">
				<h3><%- userinfo.info.lgn  %></h2>
				<h3><% if (userinfo.info.class == null || userinfo.info.class == '') { %>
				<%= __('Administrator') %>
			<% } else { %>
				<% if (userinfo.info.class <= 2) { %>
					<%= __('Class {{number}}', {number: userinfo.info.class}) %>
				<% } else if (userinfo.info.class <= 4) { %>
					<%= __('Visitor Class {{number}}', {number: userinfo.info.class-2}) %>
				<% } else { %>
					<%= __('Strong') %>
				<% } %>
			<% } %></h3>
			</div>
		</div>
		<div class="pure-g pricing-tables">
			<div class="pure-u-1-3">
				<div class="pricing-table pricing-table-enterprise">
				    <div class="pricing-table-header">
				        <h2>Accept</h2>

				        <span class="pricing-table-price">
				            <%- userinfo.solve.length %>
				        </span>
				    </div>
				</div>
			</div>
			<div class="pure-u-1-3">
				<div class="pricing-table pricing-table-enterprise">
				    <div class="pricing-table-header">
				        <h2>Sub</h2>

				        <span class="pricing-table-price">
				            Na
				        </span>
				    </div>
				</div>
			</div>
			<div class="pure-u-1-3">
				<div class="pricing-table pricing-table-enterprise">
				    <div class="pricing-table-header">
				        <h2>Exp</h2>

				        <span class="pricing-table-price">
				            Na
				        </span>
				    </div>
				</div>
			</div>
			<div class="pure-u-1 pure-u-md-1-1">
				<ul class="pricing-table-list">
					<li><%- userinfo.info.ip %></li>
					<li>Last login <%- config.unitConvert('date', new Date(userinfo.info.ts2)) %></li>
				</ui>
			</div>
		</div>
	</div>
	<div class="pure-u-1 pure-u-lg-1-24">
	</div>
	<div class="pure-u-1 pure-u-lg-15-24">
		<div class="pure-u-1-1">
			<div class="content">
				<p>
					<%= userinfo.info.motto %>
				</p>
			</div>
		</div>
		<div class="pure-u-1-1">
			<table class="pure-table pure-table-bordered" style='width: 100%;'>
			<thead>
                <% let sovledListLink = site.url_for(`user/${userinfo.info.uid}/solved-list`); %>
				<th><a href="<%= sovledListLink %>"><%= __('Solved List') %></a></td>
			</thead>
			<tbody>
			<tr>
				<td>
					<% for (var i = 0; i < userinfo.solve.length; i++) { %>
						<a href='/submissions?pid=<%- userinfo.solve[i].pid %>&uid=<%- userinfo.info.uid %>'><%- userinfo.solve[i].pid %></a>
					<% } %>
				</td>
			</tr>
			</tbody>
			</table>
		</div>

		<div class="pure-u-1-1">
	<!-- Live2D Library -->
    <script src="<%= site.url_for('javascripts/live2d/live2d.min.js') %>"></script>

    <!-- Live2D Framework -->
    <script src="<%= site.url_for('javascripts/live2d/Live2DFramework.js') %>"></script>

    <!-- User's Script -->
    <script src="<%= site.url_for('javascripts/live2d/src/utils/MatrixStack.js') %>"></script>
    <script src="<%= site.url_for('javascripts/live2d/src/utils/ModelSettingJson.js') %>"></script>
    <script src="<%= site.url_for('javascripts/live2d/src/PlatformManager.js') %>"></script>
    <script src="<%= site.url_for('javascripts/live2d/src/LAppDefine.js') %>"></script>
    <script src="<%= site.url_for('javascripts/live2d/src/LAppModel.js') %>"></script>
    <script src="<%= site.url_for('javascripts/live2d/src/LAppLive2DManager.js') %>"></script>
    <script src="<%= site.url_for('javascripts/live2d/src/SampleApp1.js') %>"></script>
    <!--
    <p>
        <button id="btnChange" class="active">Change Model</button>
    </p>
    -->

    <div style="width: 100%:">
        <canvas id="glcanvas" width="360" height="480" style="">
        </canvas>
    </div>

    <div id="myconsole" style="color:#000; display: none;">---- Log ----</div>

<script>sampleApp1();</script>
		</div>
	</div>
</div>

<div>
    <h2>
        <%- __('Recent Submission') %>
        <span>
            <a href="<%= site.url_for('submissions?uid=' + userinfo.info.uid) %>">(all)</a>
        </span>
    </h2>
</div>
<%- include('../_widget/submission_table', {submission_list: userinfo.recent}) %>

</div>
